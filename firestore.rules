rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users documents: allow authenticated reads and let a user create/update their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow the owner to update their profile but disallow changing role via client
      allow update: if request.auth != null && request.auth.uid == userId
                    && !(request.resource.data.keys().hasAny(['role']) && request.resource.data.role != resource.data.role);
      allow delete: if false;
    }

    // Chats collections (dev convenience). Authenticated users may read/write
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
      match /messages/{msgId} {
        allow read, write: if request.auth != null;
      }
    }

    match /chat/{chatId} {
      allow read, write: if request.auth != null;
      match /messages/{msgId} {
        allow read, write: if request.auth != null;
      }
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
